<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.babeh_000.temperaturecontroller.MainActivity">

    <EditText
        android:id="@+id/ActualTemperatureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="97dp" />

    <EditText
        android:id="@+id/DesiredTemperatureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="303dp" />

    <Button
        android:id="@+id/SetTemeratureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set  Temperature"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="363dp" />

    <TextView
        android:id="@+id/desired_temperature"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:text="Desired Temperature"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="265dp" />

    <TextView
        android:id="@+id/actual_temperature"
        android:layout_width="214dp"
        android:layout_height="36dp"
        android:text="Actual Temperature"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="62dp" />

</android.support.constraint.ConstraintLayout>
